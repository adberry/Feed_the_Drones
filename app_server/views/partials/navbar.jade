div#navbar
  a(href='/')
    h1= appTitle
  div#navbar-links
    span
      a(href='#' data-toggle='modal', data-target='#addfeedmodal') Add Feed
    span
      a(href='#' data-toggle='modal', data-target='#loginmodal') Log In


#addfeedmodal.modal.fade.bannerformmodal(tabindex='-1', role='dialog', aria-labelledby='addfeedmodal', aria-hidden='true')
   .modal-body.modal-dialog.modal-content
     .modal-header
       h3 Add a YouTube Video Feed 
     form(role='form', action="/addfeed").modal-body
       .form-group
         label(for='url') YouTube URL:
         input#url.form-control(type='url')
       button.btn.btn-default(type='submit') Submit

#loginmodal.modal.fade.bannerformmodal(tabindex='-1', role='dialog', aria-labelledby='loginmodal', aria-hidden='true')
   .modal-body.modal-dialog.modal-content
     .modal-header
       h3 Log In
     form(role='form', action="/login").modal-body
       .form-group
         label(for='email') Email:
         input#email.form-control(type='email')
       .form-group
         label(for='pwd') Password:
         input#pwd.form-control(type='password')
       button.btn.btn-default(type='submit') Submit
